<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pur_customcode_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订单号："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_customcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pur_customcode_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pur_billdate_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="单据日期："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_billdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pur_billdate_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_deliverdate_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="170dp"
            android:text="交货日期："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_deliverdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pur_deliverdate_tip"
            android:textColor="@color/red"
            android:textSize="15sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pur_company_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="170dp"
            android:text="供应商："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pur_company_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_material_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="产品："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pur_material_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pur_factory_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加工厂："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_factory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pur_factory_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_employee_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="170dp"
            android:text="业务员："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pur_employee_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/pur_quantity_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计划数："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pur_quantity_tip"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_rquantity_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:text="已收数："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_rquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pur_rquantity_tip"
            android:textColor="@color/red"
            android:textSize="15sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pur_iquantity_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实收数："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_iquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pur_iquantity_tip"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_sup_material_code_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="170dp"
            android:text="坯布代号："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pur_sup_material_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/pur_sup_material_code_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>


</LinearLayout>
