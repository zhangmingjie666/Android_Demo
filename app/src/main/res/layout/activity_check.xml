<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/content_bg"
    >

    <include layout="@layout/actionbar_spinner"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/content_bg"
        android:padding="1dp"
        android:weightSum="1">

        <com.example.nrbzms17.ui.widget.ClearEditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="输入条码"
            android:background="@drawable/search_edittext_bg"
            android:maxLength="20"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/txtvConfirm"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="查询"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/button_bg_box"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/pullListView"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        ></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/txtv_volume_tip"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="实际匹数:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/txtvVolume"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text=""
            android:textColor="@color/black"
            android:background="@drawable/edittext_line_bg"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:singleLine="true"
            android:inputType="numberDecimal"
            />
        <TextView
            android:id="@+id/txtv_quantity_tip"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="实际数量:"
            android:layout_marginLeft="6dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/txtvQuantity"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:hint=""
            android:text=""
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"
            android:background="@drawable/edittext_line_bg"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:inputType="numberDecimal"
            android:imeOptions="actionSend"
            android:singleLine="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/txtv_Reason_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="盘点原因:"

            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/txtvReason"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:hint=""
            android:text=""
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:paddingRight="2dp"
            android:background="@drawable/edittext_line_bg"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:imeOptions="actionSend"
            android:singleLine="true"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="盘点完成" />
</LinearLayout>
