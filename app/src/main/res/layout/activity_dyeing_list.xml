<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dye_customcode_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订单号："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_customcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dye_customcode_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_code_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="170dp"
            android:text="点坯编号："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dye_code_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dye_billdate_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="单据日期："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_billdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dye_billdate_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_factory_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:text="加工厂："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_factory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dye_factory_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dye_color_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="170dp"
            android:text="颜色："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dye_color_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_material_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="产品："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dye_material_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dye_status_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dye_status_tip"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_employee_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="170dp"
            android:text="跟单员："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_employee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dye_employee_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/dye_quantity_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点坯数："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dye_quantity_tip"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_rquantity_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:text="收货数："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_rquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dye_rquantity_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dye_iquantity_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实收数："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_iquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dye_iquantity_tip"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_task_code_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="170dp"
            android:text="任务号："
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dye_task_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dye_task_code_tip"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>


</LinearLayout>
